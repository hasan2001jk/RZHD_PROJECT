pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    // Define the Maven settings once for the entire pipeline
    options {
        withMaven(mavenSettingsConfig: '3e5dd040-52ae-4a57-8172-28911c31cf60')
    }
    stages {
        stage('Code Quality Checks') {
            steps {
                dir('Mobile_Railway_Workspace') {
                    // No withMaven block needed here, it's inherited from the top level
                    sh 'mvn -B -ntp checkstyle:check || true'
                }
            }
            post {
                always {
                    recordIssues tools: [checkStyle(pattern: 'Mobile_Railway_Workspace/target/checkstyle-result.xml')], enabledForFailure: true
                }
            }
        }
        stage('Run Tests') {
            steps {
                dir('Mobile_Railway_Workspace') {
                    sh 'mvn -B -ntp test'
                }
            }
        }
        stage('Build') {
            steps {
                dir('Mobile_Railway_Workspace') {
                    sh 'mvn -B -ntp clean install -DskipTests'
                }
            }
        }
    }
    post {
        success {
            echo 'Build, checks, and tests completed successfully!'
        }
        failure {
            echo 'Something failed. Check the logs.'
        }
    }
}
